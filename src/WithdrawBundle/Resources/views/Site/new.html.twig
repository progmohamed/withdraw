{% extends ':admin:base.html.twig' %}
{% import "AdminBundle:Main:_helper.html.twig" as helper %}

{% set sideMenuActiveSection = 'withdraw' %}
{% set pageTitle = 'withdraw.site.new_item'|trans %}

{% block breadcrumb %}

    {{ helper.breadcrumb([
    ['withdraw.menu.site', path('withdraw_site_list')],
    [pageTitle]
    ]) }}

{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'withdraw.site.new_item'|trans }}</h1>
    </div>

    <div class="btn-group screenTopButtons">
        <a class="btn btn-sm btn-inverse" href="{{ path('withdraw_site_list') }}">{{ 'admin.titles.list'|trans }}</a>
    </div>

    <div class="row">
        <div class="col-xs-12">

            {{ helper.showTranslatableFormErrorAlertIfAny(form) }}


            {{ form_errors(form) }}
            {{ form_start(form, {'attr': {'novalidate':'true', 'class': 'form-horizontal', 'role':'form'}}) }}

            <div>
                <div class="form-group">
                    <label class="col-sm-2 control-label no-padding-right"> {{ form_label(form.url) }} </label>
                    <div class="col-sm-10">
                        {{ form_errors(form.url) }}
                        {{ form_widget(form.url) }}
                    </div>
                </div>
                <div class="space-4"></div>
            </div>
            {{ form_rest(form) }}

            <div class="clearfix form-actions">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-info" type="submit" name="submit">
                        <i class="icon-ok bigger-110"></i>{{ 'admin.titles.add'|trans }}
                    </button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}

{% block bottomScripts %}
    <script src="{{ asset('bundles/withdraw/js/custom.js') }}"></script>
{% endblock %}
